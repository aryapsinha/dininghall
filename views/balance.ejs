<%- include('_header.ejs') %>
<style>
    /* Container for the balance page */
    .balance-page {
        display: flex;
        flex-direction: column;
        align-items: flex-start; /* Align items to the left */
        padding: 20px; /* Add padding around the page */
        min-height: 100vh; /* Ensure it covers the full viewport */
    }

    /* Title styling */
    .balance-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px; /* Space below the title */
    }

    /* Row for meal swipes and points */
    .balance-row {
        display: flex;
        justify-content: space-between;
        width: 100%; /* Full width for the row */
        margin-bottom: 20px; /* Space below the row */
    }

    /* Box styling for meal swipes and points */
    .balance-box {
        background-color: #FAE2C3; /* Light background for boxes */
        border-radius: 5px; /* Rounded corners */
        padding: 15px; /* Padding inside the box */
        width: 48%; /* Almost half width */
        text-align: center; /* Center the text */
        font-size: 18px; /* Font size for consistency */
        box-shadow: 0 2px 5px rgba(0,0,0,0.2); /* Add slight shadow for depth */
    }

    /* History section styling */
    .history-section {
        text-align: left; /* Align text to the left */
        margin-top: 10px; /* Space above the history section */
    }

    .history-title {
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 5px; /* Space below the history title */
    }

    .history-box {
        background-color: #F7C6A1; /* Slightly darker background for history items */
        border-radius: 5px; /* Rounded corners */
        padding: 10px; /* Padding inside the history box */
        margin-bottom: 5px; /* Space between history items */
    }

    /* List styling */
    .balance-list {
        list-style-type: none; /* Remove default list styles */
        padding: 0; /* Remove padding */
        width: 100%; /* Full width for the list */
    }

    .balance-list-item {
        padding: 10px; /* Padding for list items */
        background-color: #FAE2C3; /* Background color */
        margin-bottom: 5px; /* Space between items */
        border-radius: 5px; /* Rounded corners */
        text-align: center; /* Center the text */
    }
</style>

<div class="balance-page">
    <!-- Title for the Balance page -->
    <div class="balance-title">Balance</div>

    <!-- Row for Meal Swipes and Points -->
    <div class="balance-row">
        <div class="balance-box">
            119 Meal Swipes
            <div class="history-section">
                <div class="history-title">History</div>
                <div class="history-box">Last Meal Swipe: 10/05/2024</div>
            </div>
        </div>
        <div class="balance-box">
            218 Points Left
            <div class="history-section">
                <div class="history-title">History</div>
                <div class="history-box">Last Points Used: 10/01/2024</div>
            </div>
        </div>
    </div>

    <!-- List Section -->
    
</div>

